{
	"compilerOptions": {
		"moduleResolution": "node",
		"sourceMap": true,
		"module": "commonjs",
		"target": "es2017",
		"outDir": "./dist",
		"baseUrl": "./src",
		"typeRoots": ["@types", "node_modules/@types"],
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts", "src/tests/user.test.ts", "src/tests/timeCapsule.test.ts", "src/tests/group.test.ts", "src/tests/tag.test.ts", "src/tests/notification.test.ts"],
	"exclude": ["node_modules"]
}
